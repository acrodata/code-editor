{
  "name": "code-editor-srcs",
  "version": "0.0.0-NOT-USED",
  "engines": {
    "yarn": ">=1.22.0 <2",
    "npm": "Please use Yarn instead of NPM to install dependencies"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve dev-app",
    "build": "ng build dev-app --base-href=/code-editor/",
    "watch": "ng build dev-app --watch --configuration development",
    "test": "ng test dev-app",
    "lint": "ng lint --fix && npm run lint:scss",
    "lint:ts": "eslint \"projects/**/*.ts\" --fix",
    "lint:scss": "stylelint \"projects/**/*.scss\" --fix",
    "build:lib": "ng build code-editor && cp README.md dist/code-editor",
    "publish": "npm run build:lib && cd dist/code-editor && npm publish",
    "deploy": "npm run build && ng deploy",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@acrodata/gui": "^2.4.0",
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/merge": "^6.11.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@ng-matero/extensions": "^19.4.1",
    "codemirror": "^6.0.2",
    "lodash-es": "^4.17.21",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.15",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/jasmine": "~5.1.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.0",
    "angular-cli-ghpages": "^2.0.0",
    "angular-eslint": "^19.8.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^20.3.2",
    "prettier": "^3.7.3",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.48.1"
  }
}