{
  "name": "code-editor-srcs",
  "version": "0.0.0-NOT-USED",
  "engines": {
    "yarn": ">=1.22.0 <2",
    "npm": "Please use Yarn instead of NPM to install dependencies"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve dev-app",
    "build": "ng build dev-app --base-href=/code-editor/",
    "watch": "ng build dev-app --watch --configuration development",
    "test": "ng test dev-app",
    "lint": "ng lint --fix && npm run lint:scss",
    "lint:ts": "eslint \"projects/**/*.ts\" --fix",
    "lint:scss": "stylelint \"projects/**/*.scss\" --fix",
    "build:lib": "ng build code-editor && cp README.md dist/code-editor",
    "publish": "npm run build:lib && cd dist/code-editor && npm publish",
    "deploy": "npm run build && ng deploy",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@acrodata/gui": "^3.0.0",
    "@angular/cdk": "^21.0.3",
    "@angular/common": "^21.0.5",
    "@angular/compiler": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/material": "^21.0.3",
    "@angular/platform-browser": "^21.0.5",
    "@angular/router": "^21.0.5",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/merge": "^6.10.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@ng-matero/extensions": "^20.3.0",
    "codemirror": "^6.0.1",
    "lodash-es": "^4.17.21",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.5",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/jasmine": "~5.1.0",
    "@types/lodash-es": "^4.17.10",
    "@types/node": "^20.12.0",
    "angular-cli-ghpages": "^2.0.0",
    "angular-eslint": "^20.6.0",
    "eslint": "^9.39.0",
    "husky": "^9.1.6",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.0",
    "ng-packagr": "^21.0.1",
    "prettier": "^3.6.0",
    "stylelint": "^16.5.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
